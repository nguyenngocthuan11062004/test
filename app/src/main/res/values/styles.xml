<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@color/color_button_number</item>-->
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">numberAction</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_pressed</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@color/color_button_other</item>-->
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_pressed_other</item>
    </style>

</resources>